<%- include('header') -%>
<% if (typeof data === 'undefined') { data = {} }%>
<% if (typeof err === 'undefined') { err = {} }%>
<h1> Atvinnuumsókn </h1>
<form id="application" action="/" method="post">
  <div class="field_container">
    <div class="field_block">
      <label for="name">Nafn:</label>
      <input type="text" name="name" value="<%= data.name ? data.name : '' %>" class="<%= err.name ? 'error_input' : '' %>"><br>
    </div>

    <div class="field_block">

      <label for="email">Netfang:</label>
      <input type="text" name="email" value="<%= data.email ? data.email : '' %>" class="<%= err.email ? 'error_input' : '' %>"><br>
    </div>

    <div class="field_block">
      <label for="phone">Sími:</label>
      <input type="text" name="phone" value="<%= data.phone ? data.phone : '' %>" class="<%= err.phone ? 'error_input' : '' %>"><br>
    </div>

    <div class="field_block">
      <label for="comment">Kynning á þér:</label>
      <textarea rows="5" name="comment" form="application" placeholder="Verður að vera minst 100 caracter á lengd..."
        class="<%= err.comment ? 'error_input' : '' %>"><%- data.comment %></textarea><br>
    </div>

  </div>
  <div class="Radio_container">
    <label for="jobTitle" class="jobTitle">Starf sem sótt er um:</label><br>
    <input type="radio" name="jobTitle" value="programer" checked> Forritari<br>
    <input type="radio" name="jobTitle" value="designer"> Hönnuður<br>
    <input type="radio" name="jobTitle" value="admin"> Verkefnastjóri<br>
  </div>
  <input type="submit" value="Senda umsókn">

  <% if (typeof err.msgList !== 'undefined') { %>
  <p>Villur:</p>
  <ul class="error_list">
    <li>
      <%- `${err.msgList.join('</li><li>')}`%>
    </li>
  </ul>

  <% }%>

</form>

<%- include('footer') -%>
